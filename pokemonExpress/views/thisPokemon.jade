extends layout

block content
  h1= title
  p Welcome to #{title}
    - for pokemon in pokemons
      a(href="/pokemon/" + pokemon.id method="get")
        li= pokemon.name
  br
  a(href="/pokemon")
    p Click to go home

  br
  form(method="post" action="/pokemon/#{pokeId}/delete")
    input(type="submit" value="Delete Pokemon")
